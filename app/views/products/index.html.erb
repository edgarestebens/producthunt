<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Productos</h1>

      <% if signed_in? %><%#para que el botón de Publicar Producto solo aparezca si el usuario está autenticado%>
      <div class="text-right">
        <%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
      </div>
      <% end %>

      <table class="table">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>URL</th>
          <th>Descripción</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product %></td>
            <td><%= product.url %></td>
            <td><%= product.description %></td>
            <td>
              <% if signed_in? %> <%#para que los link de editar y eliminar solo aparezca si el usuario está autenticado%>
                  <%= link_to "Editar", edit_product_path(product) %>
                  <%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
              <% end %>
              </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>